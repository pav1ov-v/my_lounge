<html lang="EN">
<body>
<div>
    <form method="post">
        <label>
            <input type="text" name="text" placeholder="Input message, please"/>
        </label>
        <label>
            <input type="text" name="tag" placeholder="Tag">
        </label>
        <button type="submit">Добивать</button>
    </form>
</div>
<div>Message list</div>
<form method="post" action="filter">
    <label>
        <input type="text" name="filter">
    </label>
    <button type="submit">Search</button>
</form>
{{#messages}}
<div>
    <b>{{id}}</b>
    <span>{{text}}</span>
    <i>{{tag}}</i>
</div>
{{/messages}}
</body>
</html>